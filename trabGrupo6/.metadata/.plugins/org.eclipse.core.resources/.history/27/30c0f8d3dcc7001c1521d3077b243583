package org.serratec.classes;

import java.time.LocalDate;
import java.util.Objects;

import org.serratec.enums.Parentesco;

public class Dependente extends Pessoa {
	private String parentesco;

	public Dependente(String nome, String cpf, LocalDate dataNascimento, String parentesco) {
		super(nome, cpf, dataNascimento);
		this.parentesco = parentesco;
	}

	@Override
	public String toString() {
		return "Dependente [parentesco=" + parentesco + ", nome=" + nome + ", cpf=" + cpf + ", dataNascimento=" + dataNascimento + "]";
	}

	public String getParentesco() {
		return parentesco;
	}

	@Override
	public int hashCode() {
		return Objects.hash(cpf);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Dependente other = (Dependente) obj;
		return Objects.equals(cpf, other.cpf);
	}
	
	@Override
	public Integer calcularIdade() {
		return super.calcularIdade();
	}
	
}
